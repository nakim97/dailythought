<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">Edit Thought</h1>
    <div class="col-6 offset-3">
        <form action="/blogs/<%=blog._id%>?_method=PUT" method="POST">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="blog[title]"
                    value="<%=blog.title %>">
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Image Url</label>
                <input class="form-control" type="text" id="image" name="blog[image]"
                    value="<%=blog.image %>">
            </div>
            <div class="mb-3">
                <label class="form-label" for="mood">Mood</label>
                <input class="form-control" type="text" id="mood" name="blog[mood]"
                    value="<%=blog.mood %>">
            </div>

            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description"
                    name="blog[description]"><%=blog.description%></textarea>
            </div>
            <div class="mb-3">
                <button class="btn btn-info">Update Thought</button>
            </div>
        </form>
        <a href="/blogs/<%= blog._id%>">Back To Blog</a>

    </div>