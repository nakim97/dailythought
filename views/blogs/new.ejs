<% layout('layouts/boilerplate')%>
<link rel="stylesheet" href="/stylesheets/new.css">
<div class="row">
    <h1 class="text-center">New Thought</h1>
    <div class="col-6 offset-3">
        <form action="/blogs" method="POST" novalidate class="validated-form">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="blog[title]" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="blog[description]"
                    required></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            
            <div class="mb-3">
                <p>Select your mood:</p>
                <div class="bubbles">
                    <input type="radio" id="happy" value="happy" name="blog[bubble]">
                <label for="happy"> <img src="/images/happy.png" width="auto" height="100px"></label> 

                <input type="radio" id="laugh" value="laugh"  name="blog[bubble]">
                <label for="laugh"> <img src="/images/laugh.png" width="auto" height="100px"></label> 

                <input type="radio" id="love" value="love" name="blog[bubble]">
                <label for="love"> <img src="/images/love.png"width="auto" height="100px"></label><br>

                <input type="radio" id="mad" value="mad" name="blog[bubble]">
                <label for="mad"> <img src="/images/mad.png"width="auto" height="100px"></label> 

                <input type="radio" id="sad" value="sad" name="blog[bubble]">
                <label for="sad"> <img src="/images/sad.png"width="auto" height="100px"></label>

                <input type="radio" id="shock" value="shock" name="blog[bubble]">
                <label for="shock"> <img src="/images/shock.png" width="auto" height="100px"></label> 

                </div>
                
            </div>
            <div class="mb-3 text-center">
                <button class="btn " id="btn">Add Thought</button>
            </div>
        </form>
    </div>
</div>